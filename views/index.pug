extends layout

block content
  h1= title
  p Welcome to #{title}
  button(type="button",class="btn-btn-secondary" onclick="goFaster()") Press Me
  div(id="faster") Increase the speed
  script.
      var mph=20;
      var change =1;
      function goFaster()
      {
         mph=mph+change;
         change++;
         var div=document.getElementById('faster');
         div.innerHTML= `MPH ${mph} with change ${change}`
      }
   